<script>
  function log_chk() {
    if(window.sessionStorage.getItem('isLogined')){
      alert('Already Logined!');
      location.href='/';
    }
  }
  function chk_pw() {
    var pw = document.getElementById('password').value;
    var re = document.getElementById('re-password').value;
    console.log(pw);
    console.log(re);
    if(pw != "" && re != "") {
      if(pw == re){
        console.log("ok");
        document.getElementsByClassName("form-control is-invalid")[0].className = "form-control is-valid";
      }
    }
  }
</script>

<body data-spy="scroll" data-target=".onpage-navigation" data-offset="60">
   <div class="container">
    <div class="container-reg">
      <form class="form-reg">
        <script>
          log_chk();
        </script>
        <div class="welcome">Create an Account</div>
        <p>I D</p>
        <div class="input-group mb-3">
          <input id="id" type="text" name="id" class="form-control" placeholder="I D">
          <span class="input-group-text"><i class="fa-solid fa-id-card"></i></span>
          <p class="help-block" id="userid-message"></p>
        </div>
        <p>password</p>
        <div class="input-group mb-4">
          <input id="password" type="password" name="password" class="form-control" placeholder="PASSWORD" onchange="chk_pw()">
          <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
          <p class="help-block" id="password-message"></p>
        </div>
        <p>re-password</p>
        <div class="input-group mb-4">
          <input id="re-password" type="password" name="re-password" class="form-control is-invalid" placeholder="CONFIRM PASSWORD" onchange="chk_pw()">
          <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
          <p class="help-block" id="repassword-message"></p>
        </div>
        <p>username</p>
        <div class="input-group mb-4">
          <input id="username" type="text" name="username" class="form-control" placeholder="USERNAME">
          <span class="input-group-text"><i class="fa-solid fa-id-card"></i></span>
          <p class="help-block" id="username-message"></p>
        </div>
        <p>email</p>
        <div class="input-group mb-4">
          <input id="email" type="email" name="email" class="form-control" placeholder="E-MAIL">
          <span class="input-group-text"><i class="fa-solid fa-at"></i></span>
          <p class="help-block" id="email-message"></p>
        </div>
        <p>phone number</p>
        <div class="input-group mb-4">
          <input id="number" type="text" name="number" class="form-control" placeholder="PHONE NUMBER">
          <span class="input-group-text"><i class="fa-solid fa-phone"></i></span>
          <p class="help-block" id="phone-message"></p>
        </div>
        <div class="account-options">
          <a href="./">Home</a>
          <a href="./login">Login</a>
          <a href="find-pw">Forgot password</a>
        </div>
        <button type="button" id="register_btn" class="btn btn-primary">Create Account</button>
      </form>
    </div>
